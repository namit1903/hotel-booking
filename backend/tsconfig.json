{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ES6",
    "outDir": "./dist",          // Output directory for compiled JS
    "rootDir": "./src",          // Source directory for TS files
    "strict": true   
  }
}
